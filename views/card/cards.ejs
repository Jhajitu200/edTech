<diV id="main">

<div class="card" style="display: none;">
    <img src="https://via.placeholder.com/300" alt="Card Image" class="card-img">
    <div class="card-content">
        <form action="/buy" method="post">
        <h2 class="card-title"></h2>
        <p class="card-description">
        </p>
        <p class="price"></p>
        <button type="submit" >Buy Now</button>"
    </form>
    </div>
</div>
</diV>

<script>
    const collection = require('./../../course_mongodb');
    async function data(){
        const data = await collection.find({}).toArray();
        console.log(data);
    for(let i = 0; i <data.length; i++) {
        let card=document.getElementsByClassName('card')[0].cloneNode(true);
        card.childNodes[1][0][0].textContent = data[i].heading;
        card.childNodes[1][0][1].textContent = data[i].description;
        card.childNodes[1][0][2].textContent = data[i].price;
        card.style.display='block';
        document.getElementById('main').appendChild(card);
    }
    }
    data();
</script>